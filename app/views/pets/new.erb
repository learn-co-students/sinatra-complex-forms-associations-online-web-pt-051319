<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
	<label for="pet_name">Pet's name: </label><input type="text" name="pet[name]" id="pet_name">
	<% @owners.each do |owner| %>
	<label for="<%= owner.id %>"><%= owner.name %></label>
	<input type="radio" name="pet[owner]" value="<%= owner.id %>" id="<%= owner.id %>">
	<% end %>
	<label for="owner_name">New owner's name: </label><input type="text" name="owner[name]" id="owner_name">
	<input type="submit" value="Create Pet">
</form>